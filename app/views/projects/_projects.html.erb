<div class='truefont' id='AlertDiv'>
	<h1>Задачи</h1>
	<a class='todo-btn'>+</a>
</div>
<div id='BoxMain' class='truefont'>
	<% @projects.each do |project| %>
		<div id='BoxDiv' class='truefont col-12 col-md-6 col-lg-4'>
			<h2><%= project.title.upcase %></h2>
			<hr>
			<ul>
				<%= render project.todos %>
			</ul>
		</div>
	<% end %>
</div>